input_dim: 1
input_dim: 1
input_dim: 14
input_dim: 14

input: "seg_weights"
input_dim: 1 		# to be changed on-the-fly to match input dim
input_dim: 1        # 9(anchors)        
input_dim: 14  		# size for 224 input image, to be changed on-the-fly to match input dim
input_dim: 14  		# size for 224 input image, to be changed on-the-fly to match input dim


layer {
	bottom: "data"
	top: "conv1_1"
	name: "conv1_1"
	type: "Convolution"
	param {
		lr_mult: 0.0
	}
	param {
		lr_mult: 0.0
	}
	convolution_param {
		num_output: 64
		pad: 1
		kernel_size: 3
	}
}

layer {
	bottom: "conv1_1"
	top: "conv1_1"
	name: "relu1_1"
	type: "ReLU"
}

layer {
	bottom: "conv1_1"
	top: "conv1_2"
	name: "conv1_2"
	param {
		lr_mult: 0.0
	}
	param {
